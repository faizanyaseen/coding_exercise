<%= form_with(model: employment) do |form| %>

  <div>
    <%= form.label :employer, style: "display: block" %>
    <%= form.text_field :employer, required: true %>
    <% if employment.errors[:employer].present? %>
      <li style="color: red"><%= employment.errors.full_messages_for(:employer).first %></li>
    <% end %>
  </div>

  <div>
    <%= form.label :date_started, style: "display: block" %>
    <%= form.datetime_field :date_started, required: true%>
    <% if employment.errors[:date_started].present? %>
      <li style="color: red"><%= employment.errors.full_messages_for(:date_started).first %></li>
    <% end %>
  </div>

  <div>
    <%= form.label :date_employment_ended, style: "display: block" %>
    <%= form.datetime_field :date_employment_ended, required: true %>
    <% if employment.errors[:date_employment_ended].present? %>
      <li style="color: red"><%= employment.errors.full_messages_for(:date_employment_ended).first %></li>
    <% end %>
  </div>

  <div>
    <%= form.submit "Add Employment", class: "rounded-lg py-3 px-5 bg-blue-600 text-white"%>
  </div>
<% end %>
