<%= turbo_frame_tag 'modal' do %>
  <%= tag.div data: { controller: "turbo-modal", action: "keyup@window->turbo-modal#closeWithKeyboard" }, class: "p-5 bg-slate-300 absolute z-10 top-10 right-10 rounded-md w-96 break-words" do %>
    <h1>New employment</h1>
    <%= render "form", employment: @employment %>
    <%= button_tag "Close", data: { action: "turbo-modal#hideModal" }, type: "button", class: "rounded-lg py-3 px-5 bg-red-600 text-white" %>
  <% end %>
<% end %>