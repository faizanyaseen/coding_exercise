<div id="<%= dom_id employee %>">
  <p>
    <strong>First name:</strong>
    <%= employee.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= employee.last_name %>
  </p>

  <p>
    <strong>Nickname:</strong>
    <%= employee.nickname %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= employee.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= employee.phone %>
  </p>

  <div>
    <%= link_to "Edit this employee", edit_employee_path(employee) %> |
    <%= button_to "Destroy this employee", employee, method: :delete %>
  </div>

</div>
