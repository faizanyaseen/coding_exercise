<p style="color: green"><%= notice %></p>

<%= link_to "Personal Data",
                    new_employee_path,
                    class: "focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900",
                    data: { turbo_frame: 'modal' } %>

<%= link_to "New Employment",
                    new_employment_path,
                    class: "focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900",
                    data: { turbo_frame: 'modal' } %>

<br>
<br>
<h2 class="text-4xl font-extrabold dark:text-white">Personal Details</h2>
<div id="employees">
  <% @employees.each do |employee| %>
    <%= render employee %>
    <hr class="my-4 mx-auto w-48 h-1 bg-gray-100 rounded border-0 md:my-10 dark:bg-gray-700">
  <% end %>
</div>

<hr class="my-4 mx-auto w-48 h-1 bg-gray-100 rounded border-0 md:my-10 dark:bg-gray-700">

<h2 class="text-4xl font-extrabold dark:text-white">Employments</h2>
<div id="employments">
  <% @employments.each do |employment| %>
    <%= render employment %>
    <hr class="my-4 mx-auto w-48 h-1 bg-gray-100 rounded border-0 md:my-10 dark:bg-gray-700">
  <% end %>
</div>